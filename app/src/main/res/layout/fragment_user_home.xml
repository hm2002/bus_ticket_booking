<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/destop"
    tools:context=".user_home">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#FFFA00"
                android:background="#567fba"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/busimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="7dp"
                android:layout_below="@+id/uname"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/icon2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busimage"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:text="From:"
                android:textSize="40dp"/>

            <EditText
                android:id="@+id/source"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_below="@+id/busimage"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="Source"
                android:textAlignment="center"
                android:textColorHint="#3F51B5"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/source"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:text="To:"
                android:textSize="40dp"/>

            <EditText
                android:id="@+id/destination"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_below="@+id/source"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="Destination"
                android:textAlignment="center"
                android:textColorHint="#3F51B5"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destination"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:text="Date:"
                android:textSize="40dp"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_below="@+id/destination"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:enabled="false"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:hint="Date"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textColorHint="#3F51B5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/date_button"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_below="@+id/destination"
                android:layout_alignRight="@+id/date"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#B6B4AD"
                android:textColor="#D11212"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bus_search"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:text="Search Buses"
                android:textColor="#F7FF00"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_below="@+id/date"/>

        </RelativeLayout>


</FrameLayout>